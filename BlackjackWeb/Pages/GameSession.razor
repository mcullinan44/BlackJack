        _controller.OnBankrollChange += ControllerOnOnBankrollChange;
        _controller.OnGameEnd += ControllerOnOnGameEnd;
        _controller.OnShowAllCards += ControllerOnOnShowAllCards;
        _controller.OnSitDownToPlay += ControllerOnOnSitDownToPlay;
        _controller.MinimumBet = Defaults.MINIMUM_BET;
        _controller.ShuffleAll();
        _betIncrement = controller.MinimumBet;
        _bankroll = "1000";
        _ready = true;
    }

    private void ControllerOnOnSitDownToPlay(object sender, EventArgs e)
    {
        _totalBet = 0;
        _canDeal = false;
        _canIncreaseBet = true;
        StateHasChanged();
    }

